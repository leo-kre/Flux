{
  "expo": {
    "name": "Flux",
    "slug": "Flux",
    "version": "1.0.0",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      [
        "react-native-health",
        {
          "permissions": {
            "read": [
              "StepCount",
              "DistanceWalkingRunning",
              "DistanceCycling",
              "FlightsClimbed",

              "HeartRate",
              "RestingHeartRate",
              "WalkingHeartRateAverage",
              "HeartRateVariabilitySDNN",
              "VO2Max",

              "ActiveEnergyBurned",
              "BasalEnergyBurned",

              "SleepAnalysis",
              "MindfulSession",

              "BodyMass",
              "Height",
              "BodyMassIndex",
              "BodyFatPercentage",
              "LeanBodyMass",

              "BodyTemperature",
              "RespiratoryRate",
              "OxygenSaturation",
              "BloodPressureSystolic",
              "BloodPressureDiastolic"
            ],
            "write": [
              "Workout" // nur wenn wirklich ben√∂tigt
            ]
          }
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "userInterfaceStyle": "automatic",
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.myexpoapp",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Die App liest Gesundheitsdaten zur Analyse von Lernfenstern.",
        "NSHealthUpdateUsageDescription": "Die App kann Trainingsdaten schreiben (optional)."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.myexpoapp"
    }
  }
}
